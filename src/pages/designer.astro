---
import PageHead from '@/components/PageHead.astro'
import Skills from '@/components/react/skills'
import Layout from '@/layouts/Layout.astro'
import { SITE } from '@/consts'
import Link from '@/components/Link.astro';
import { buttonVariants } from '@/components/ui/button';
import LogoCarousel from '@/components/react/logocarousel';


const currentUrl = Astro.url;
const username = 'PramudithaN';
const res = await fetch(`https://api.github.com/users/${username}/repos?per_page=100&sort=updated`);
const repos = await res.json();
---

<Layout canonicalUrl={currentUrl}>
  <PageHead slot="head" title="Associate Software Engineer" />
  <section class="flex flex-col gap-y-12 px-4 py-4 sm:px-8 lg:px-16">
    <section class="relative" aria-labelledby="featured-title">
      <h2
        id="featured-title"
        class="font-custom text-foreground text-2xl font-bold"
        title="featured"
        aria-label="featured"
        role="heading"
      >
        Featured
      </h2>
      <p class="text-muted-foreground text-sm" aria-label="featured description">
        A glimpse into my creative endeavors.
      </p>
      
    <div class="mt-6 grid h-[540px] grid-cols-3 grid-rows-3 gap-4">
        <div class="col-span-2 row-span-1 rounded-2xl overflow-hidden bg-gray-900 transform transition-transform duration-300 hover:scale-105">
          <img src="/Images/Deset-Truck.webp" alt="Neo Bot style project" class="h-full w-full object-cover" loading="lazy" />
        </div>
        <div class="col-span-1 row-span-2 rounded-2xl overflow-hidden bg-gray-900 transform transition-transform duration-300 hover:scale-105">
          <img src="/Images/F-Hellcat.webp" alt="Welcome Human style project" class="h-full w-full object-cover" loading="lazy" />
        </div>
        <div class="col-span-1 row-span-2 rounded-2xl overflow-hidden bg-gray-900 transform transition-transform duration-300 hover:scale-105">
          <img src="/Images/ezgif-4-7dd240caf3.webp" alt="Creative character project" class="h-full w-full object-cover" loading="lazy" />
        </div>
        <div class="col-span-1 row-span-1 rounded-2xl overflow-hidden bg-gray-900 transform transition-transform duration-300 hover:scale-105">
          <img src="/Images/Skull_Island.webp" alt="Power icon style project" class="h-full w-full object-cover" loading="lazy" />
        </div>
        <div class="col-span-2 row-span-1 rounded-2xl overflow-hidden bg-gray-900 transform transition-transform duration-300 hover:scale-105">
          <img src="/Images/portal.webp" alt="Cyberpunk style project" class="h-full w-full object-cover" loading="lazy" />
        </div>
      </div>
        </section>
        <div class="flex justify-center mt-4 mb-0 sm:mb-4">
      <Link
        href="/gallery"
        class={buttonVariants({ variant: 'default' }) + ' group'}
      >
        View Gallery
        <span class="ml-1.5 transition-transform group-hover:translate-x-1">&rarr;</span>
      </Link>
        </div>
  
    <!-- Skills -->
    <section class="relative" aria-labelledby="skills-title">
      <h2
        id="skills-title"
        class="font-custom text-foreground text-2xl font-bold"
        title="skills"
        aria-label="skills"
        role="heading"
      >
        Skills & Technologies
      </h2>
      <p class="text-muted-foreground text-sm" aria-label="skills description">
        Here are some of the technologies I've been working with:
      </p>
      <div>
        <Skills mode={"Designer"} client:load />
      </div>
    </section>

    <section class="relative" aria-labelledby="logo-design-title">
      <h2
        id="logo-design-title"
        class="font-custom text-foreground text-2xl font-bold"
        title="logo-design"
        aria-label="logo-design"
        role="heading"
      >
        Logo Design
      </h2>
      <p class="text-muted-foreground text-sm" aria-label="logo-design description">
        Here are some of the logo design work I've been done:
      </p>
      
      <LogoCarousel client:load />
      <div>
       
      </div>
    </section>
    

  </section>
</Layout>